<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/dialog_user_display_avatar"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_user_display_displayName"
        android:text="Display Name"
        android:layout_toEndOf="@id/dialog_user_display_avatar"
        android:layout_alignTop="@id/dialog_user_display_avatar"
        android:layout_alignBottom="@id/dialog_user_display_avatar"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#de000000"/>

</RelativeLayout>