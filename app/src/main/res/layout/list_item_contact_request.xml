<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/list_item_contact_request_avatar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/list_item_contact_request_avatar"
        android:layout_alignTop="@id/list_item_contact_request_avatar"
        android:layout_alignBottom="@id/list_item_contact_request_avatar"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_contact_request_displayName"
            android:text="Display Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#de000000"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_contact_request_createdAt"
            android:text="Created At"/>

    </LinearLayout>

</RelativeLayout>